/**
 * Customer login form template
 *
 * @see Mage_Customer_Block_Form_Login
 */
?>
<div class="account-login-page<?php if (!$this->helper('customer')->isRegistrationAllowed()) echo ' login-only' ?>">
    <div class="page-title">
        <h1><?php if ($this->helper('customer')->isRegistrationAllowed()): ?>
            <?php echo $this->__('Login or Create an Account') ?>
            <?php else: ?>
            <?php echo $this->__('Login'); ?>
            <?php endif; ?></h1>
    </div>
    <?php echo $this->getMessagesBlock()->getGroupedHtml() ?>
	<form action="<?php echo $this->getPostActionUrl() ?>" method="post" id="login-form" class="theme1">
		<div class="fieldset">
			<?php if ($this->helper('customer')->isRegistrationAllowed()): ?>
			<div class="new-users content-block clearfix">
				<h2 class="legend"><?php echo $this->__('New Customers') ?></h2>
				<div class="box-content">
					<p class="description"><?php echo $this->__('By creating an account with our store, you will be able to move through the checkout process faster, store multiple shipping addresses, view and track your orders in your account and more.') ?></p>
					<div class="buttons-set">
						<button type="button" class="button button-arrow" onclick="window.location='<?php echo $this->getCreateAccountUrl() ?>';"><span><span><?php echo $this->__('Create Account') ?></span></span></button>
					</div>
				</div>
			</div>
			<?php endif; ?>
			<div class="registered-users content-block clearfix">
				<h2 class="legend"><?php echo $this->__('Registered Customers') ?><span class="required-fields"><?php echo $this->__('* Required Fields') ?></span></h2>
				<div class="box-content">
					<p class="description"><?php echo $this->__('If you have an account with us, log in using your email address.') ?></p>
					<p>
						<label for="email" class="required"><em>*</em><?php echo $this->__('Email Address') ?></label>
						<input name="login[username]" value="<?php echo $this->htmlEscape($this->getUsername()) ?>" id="email" type="text" class="input-text required-entry validate-email" title="<?php echo $this->__('Email Address') ?>" />
					</p>
					<p>
						<label for="pass" class="required"><em>*</em><?php echo $this->__('Password') ?></label>
						<input name="login[password]" type="password" class="input-text required-entry validate-password" id="pass" title="<?php echo $this->__('Password') ?>" />
					</p>
					<div class="buttons-set form-buttons btn-only">
						<button type="submit" class="button button-arrow" name="send" id="send2"><span><span><?php echo $this->__('Login') ?></span></span></button>
						<p class="back-link"><a href="<?php echo $this->getForgotPasswordUrl() ?>"><?php echo $this->__('Forgot Your Password?') ?></a></p>
					</div>
				</div>
			</div>
        </div>
    </form>
    <script type="text/javascript">
    //<![CDATA[
        var dataForm = new VarienForm('login-form', true);
    //]]>
    </script>
</div>
