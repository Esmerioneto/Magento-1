<?php
/**
 * Template for filter items block
 *
 * @see Mage_Catalog_Block_Layer_Filter
 */
?>
<?php $colorChart = Mage::helper('init/catalog')->getColorChart(); ?>

<ol class="clearfix">
<?php $textItems = array(); ?>
<?php $i=1; foreach ($this->getItems() as $_item): ?>
    <?php $color = $colorChart[$_item->getLabel()]; ?>
    <?php if ($color): ?>
    <li class="color<?php if(($i %4) == false) echo ' last'; ?>">
        <?php if ($_item->getCount() > 0): ?>
        <a href="<?php echo $this->urlEscape($_item->getUrl()) ?>" title="<?php echo $_item->getCount() ?> <?=$this->__('Article(s)');?>" style="background-color: #<?=$color?>"><?php echo $_item->getLabel() ?></a>
        <?php else: echo $_item->getLabel() ?>
        <?php endif; ?>
    </li>
    <?php $i++; else: $textItems[] = $_item; ?>
	<?php endif; ?>
<?php endforeach ?>

<?php $i=1; foreach ($textItems as $_item): ?>
    <li class="<?=$i==1 ? 'first-label' : '';?><?php if(($i %2) == false) echo ' right'; ?>">
        <?php if ($_item->getCount() > 0): ?>
        <a href="<?php echo $this->urlEscape($_item->getUrl()) ?>"><?php echo $_item->getLabel() ?></a>
        <?php else: echo $_item->getLabel() ?>
        <?php endif; ?>
        (<?php echo $_item->getCount() ?>)
    </li>
<?php $i++; endforeach ?>
</ol>
