<?php if(count($this->getItemCollection()->getItems())): ?>
<div class="box-collateral box-up-sell">
    <div class="box-title">
        <h2><?php echo $this->__('You may also be interested in the following product(s)') ?></h2>
    </div>
    
    <ul class="products-grid products-list clearfix" id="upsell-product-list">
    <?php $i=0; foreach ($this->getItemCollection() as $_item): ?>
    <?
        $i++;
        $class = 'item';
        if($i == 1) {
            $class = 'item first';
        } else if($i %4 == 0) {
            $class = 'item last';
        }
        echo Mage::helper('init/catalog')->getProductListHtml(
            $_item,
            array(
                'class' => $class,
                'show_labels' => false,
                'color_options' => false
            )
        )->toHtml();
    ?>
    <?php endforeach; ?>
    </ul>
    
    <script type="text/javascript">decorateList('upsell-product-list', 'none-recursive')</script>
</div>
<?php endif ?>
