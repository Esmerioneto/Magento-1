<div class="box box-list box-viewed">
    <div class="box-title clearfix">
        <h2 class=""><?php echo $this->__('Recently Viewed'); ?></h2>
        <a href ="<?php echo $this->getUrl('recently/flush'); ?>">Wissen</a>
    </div>
    <div class="box-content">
        
        <ol id="recently-viewed-items clearfix">
        <?php foreach ($_products as $_item): ?>
        <?
            $i++;
            $class = 'item';
            if($i == 1) {
                $class = 'item first';
            } else if($i %4 == 0) {
                $class = 'item last';
            }
            echo Mage::helper('init/catalog')->getProductListHtml(
                $_item,
                array(
                    'class' => $class,
                    'show_labels' => false,
                    'color_options' => falses
                )
            )->toHtml();
        ?>
        <?php endforeach; ?>
        </ol>
        
        <script type="text/javascript">decorateList('recently-viewed-items');</script>
    </div>
</div>
