<config>
    <tabs>
        <store translate="label" module="store">
            <label>Retail</label>
            <sort_order>350</sort_order>
        </store>
    </tabs>
	<sections>
		<store translate="label" module="store">
			<label>Store</label>
			<tab>store</tab>
			<sort_order>340</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<google_map translate="label">
					<label>Google map</label>
					<frontend_type>text</frontend_type>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<google_map_key translate="label">
							<label>Google map key</label>
							<frontend_type>text</frontend_type>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                            <comment>You can recieve this key on http://code.google.com/intl/ru/apis/maps/signup.html</comment>
						</google_map_key>
						<language translate="label">
							<label>Language</label>
							<frontend_type>text</frontend_type>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</language>
						<store_search_radius translate="label">
							<label>Store search radius</label>
							<frontend_type>text</frontend_type>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</store_search_radius>
						<store_count translate="label">
							<label>Store display results</label>
							<frontend_type>text</frontend_type>
							<sort_order>4</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</store_count>
						<store_country_criteria>
                            <label>Store search criteria</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>ISO country code, e.g.: "BE".</comment>
                        </store_country_criteria>
						<store_center_lat>
                            <label>Store center latitude</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </store_center_lat>
                        <store_center_lon>
                            <label>Store center longitude</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </store_center_lon>
                        <store_center_zoom>
                            <label>Store center zoom</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </store_center_zoom>
					</fields>
				</google_map>

				<storelocator>
					<label>Storelocator list sorting</label>
					<frontend_type>text</frontend_type>
					<sort_order>15</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<sort_order_first>
                            <label>First sort field:</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>For instance sort on country</comment>
						</sort_order_first>
						<sort_order_first_direction>
                            <label>First sort field direction:</label>
                            <frontend_type>select</frontend_type>
                            <source_model>store/adminhtml_system_config_source_sortorder</source_model>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</sort_order_first_direction>
						<sort_order_second>
                            <label>Secondary sort field</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>For instance sort on city within the country order</comment>
						</sort_order_second>
						<sort_order_second_direction>
                            <label>Secondary sort field direction:</label>
                            <frontend_type>select</frontend_type>
                            <source_model>store/adminhtml_system_config_source_sortorder</source_model>
                            <sort_order>16</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</sort_order_second_direction>
					</fields>
				</storelocator>

                <seo_general_store_page>
                    <label>SEO - General Store Page</label>
					<frontend_type>text</frontend_type>
					<sort_order>20</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<meta_title translate="label">
							<label>Meta Title</label>
							<frontend_type>text</frontend_type>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                        </meta_title>
                        <meta_description translate="label">
							<label>Meta Description</label>
							<frontend_type>textarea</frontend_type>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                        </meta_description>
                    </fields>
                </seo_general_store_page>
				<seo_openings_store_page>
					<label>SEO - Openings Store Page</label>
					<frontend_type>text</frontend_type>
					<sort_order>25</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<meta_title translate="label">
							<label>Meta Title</label>
							<frontend_type>text</frontend_type>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</meta_title>
						<meta_description translate="label">
							<label>Meta Description</label>
							<frontend_type>text</frontend_type>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</meta_description>
						<meta_keywords translate="label">
							<label>Meta Keywords</label>
							<frontend_type>text</frontend_type>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</meta_keywords>
					</fields>
				</seo_openings_store_page>
                <seo_default_store_page>
                    <label>SEO - Default Settings Store Page</label>
					<frontend_type>text</frontend_type>
					<sort_order>30</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
                    <fields>
                        <meta_title translate="label">
                            <label>Default Meta Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </meta_title>
                        <meta_description translate="label">
                            <label>Default Meta Description</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>
							<![CDATA[Use <em>{store_city}</em> as a placeholder for the store city;
							eg: <em>Brand {store_city}</em> -> <em>Brand Delft</em>
							]]>
							</comment>
                        </meta_description>
                        <meta_title_part translate="label">
                            <label>Meta Title Part</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>
                            <![CDATA[Use this field to add a meta title part for all store pages, use <em>{store_city}</em> as a placeholder for the store city;
                            eg: <em>Brand - {store_city}</em> -> <em>Brand - Delft</em><br />
                            Leave empty to use only the default store meta title]]>
                            </comment>
                        </meta_title_part>
                        <store_url_part>
                            <label>Store Url Part</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>
                            <![CDATA[No spaces; Use <em>{store_custom_url}</em> as a placeholder for the store custom url;
                            eg: <em>shoes-{store_custom_url}</em> -> <em>shoes-brand-delft</em> or <em>{store_custom_url}-shoes</em> -> <em>brand-delft-shoes</em>.<br />
                            Leave empty to use only the existing store custom url]]>
                            </comment>
                        </store_url_part>
                    </fields>
                </seo_default_store_page>

				<ftp_settings translate="label">
                    <label>FTP settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                    	<host translate="label">
                            <label>Host</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </host>
                        <user translate="label">
                            <label>User</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </user>
                        <password translate="label">
                            <label>Password</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                       </password>
                       <passive translate="label">
                            <label>Passive mode</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </passive>
                       <import_dir translate="label">
                            <label>Import Dir</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                       </import_dir>
					   <store_csv_filename translate="label">
                            <label>Store csv file name prefix</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                       </store_csv_filename>
					   <extraopening_csv_filename translate="label">
                            <label>Extraopening csv file name prefix</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                       </extraopening_csv_filename>
                    </fields>
                </ftp_settings>

			</groups>
		</store>
	</sections>
</config>
