<?xml version="1.0"?>
<config>
	<sections>
		<kega_touch translate="label" module="kega_touch">
			<label>Touch app</label>
			<tab>catalog</tab>
			<sort_order>20111017</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<!-- All settings defined in the 'app' group will be exported to the Touch app. -->
				<app translate="label" module="kega_touch">
					<label>General settings</label>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
					 	<api_store_id translate="label">
                            <label>Magento SOAP api store</label>
                            <frontend_type>select</frontend_type>
                            <frontend_model>kega_touch/adminhtml_core_stores</frontend_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </api_store_id>
						<api_user translate="label">
							<label>Magento SOAP api user</label>
							<frontend_type>text</frontend_type>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</api_user>
						<api_key translate="label">
							<label>Magento SOAP api key</label>
							<frontend_type>text</frontend_type>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</api_key>
						<image_url translate="label">
							<label>URL of image server</label>
							<frontend_type>text</frontend_type>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<validate>validate-url required-entry</validate>
						</image_url>
						<app_username translate="label">
							<label>Touch app (settings) username</label>
							<frontend_type>text</frontend_type>
							<sort_order>50</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</app_username>
						<app_password translate="label">
							<label>Touch app (settings) password</label>
							<frontend_type>text</frontend_type>
							<sort_order>60</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</app_password>
						<payment_method translate="label">
                            <label>Betaal methode</label>
                            <frontend_type>select</frontend_type>
                            <frontend_model>kega_touch/adminhtml_payment_methods</frontend_model>
							<sort_order>70</sort_order>
							<show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </payment_method>
						<shipping_method_delivery translate="label">
                            <label>Shipping method (delivery)</label>
                            <frontend_type>select</frontend_type>
                            <frontend_model>autoshipping/adminhtml_shipping_methods</frontend_model>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </shipping_method_delivery>
                        <shipping_method_pickup translate="label">
                            <label>Shipping method (store pickup)</label>
                            <frontend_type>select</frontend_type>
                            <frontend_model>autoshipping/adminhtml_shipping_methods</frontend_model>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </shipping_method_pickup>
                        <wait_timeout_in_seconds_thanks_page translate="label">
							<label>Timeout in seconden (bedankt pagina)</label>
							<comment>Na het plaatsen van een bestelling tonen we een bedankt pagina, voor hoeveel seconden moet deze zichtbaar zijn?</comment>
							<frontend_type>text</frontend_type>
							<sort_order>100</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<validate>validate-alphanum required-entry</validate>
						</wait_timeout_in_seconds_thanks_page>
					</fields>
				</app>
			</groups>
		</kega_touch>
	</sections>
</config>