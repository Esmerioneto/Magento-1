<config>
    <sections>
        <kega_customerexport translate="label" module="kega_customerexport">
            <label>Customer Export</label>
            <tab>customer</tab>
            <frontend_type>text</frontend_type>
            <sort_order>500</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <import translate="label" module="kega_customerexport">
                    <label>Import Options</label>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <website_mapping translate="label" module="kega_customerexport">
                            <label>Website ID mapping</label>
                            <comment>Old to new website IDs: old=new. Example: 1=2,2=4</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </website_mapping>
                        <store_mapping translate="label" module="kega_customerexport">
                            <label>Store ID mapping</label>
                            <comment>Old to new store IDs: old=new. Example: 1=2,2=4</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </store_mapping>
                       	<default_password translate="label">
                        	<label>Use default password</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <comment>If yes, 'Welkom#1' is used as password for all imported customers</comment>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </default_password>
                       	<debug_mode translate="label">
                        	<label>Enable debug mode</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <comment>Prints customer data and exception message when failed to import customer</comment>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </debug_mode>
                    </fields>
                </import>
                <export>
                	<label>Export Options</label>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <export_at_once translate="label" module="kega_customerexport">
                            <label>Export at once</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </export_at_once>
                    </fields>
                </export>
            </groups>
        </kega_customerexport>
    </sections>
</config>