<config>
    <sections>
        <sales_pdf translate="label" module="sales">
            <groups>
                <autoprint translate="label">
                	<label>Autoprint PDF's</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active_for_roles translate="label">
							<label>Active for roles</label>
							<comment><![CDATA[To un-select use ctrl + mouseclick.<br><br>ActiveX download (browser starts batch file) will be active for the selected groups.]]></comment>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>kega_autoprint/system_config_source_admin_roles</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <can_be_empty>1</can_be_empty>
						</active_for_roles>
						<host translate="label">
							<label>FTP - Host</label>
							<frontend_type>text</frontend_type>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</host>
						<user translate="label">
							<label>FTP - User</label>
							<frontend_type>text</frontend_type>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</user>
						<password translate="label">
							<label>FTP - Password</label>
							<frontend_type>text</frontend_type>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</password>
						<passive translate="label">
							<label>FTP - Passive mode</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>50</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</passive>
                    </fields>
                </autoprint>
                <invoice translate="label">
					<fields>
						<autoprint_tray translate="label">
							<label>Autoprint to</label>
                            <frontend_type>select</frontend_type>
                            <source_model>kega_autoprint/system_config_source_tray</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</autoprint_tray>
					</fields>
				</invoice>
				<shipment translate="label">
					<fields>
						<autoprint_tray translate="label">
							<label>Autoprint to</label>
                            <frontend_type>select</frontend_type>
                            <source_model>kega_autoprint/system_config_source_tray</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</autoprint_tray>
					</fields>
				</shipment>
				<refund translate="label">
					<fields>
						<autoprint_tray translate="label">
							<label>Autoprint to</label>
                            <frontend_type>select</frontend_type>
                            <source_model>kega_autoprint/system_config_source_tray</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</autoprint_tray>
					</fields>
				</refund>
				<creditmemo translate="label">
					<fields>
						<autoprint_tray translate="label">
							<label>Autoprint to</label>
                            <frontend_type>select</frontend_type>
                            <source_model>kega_autoprint/system_config_source_tray</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</autoprint_tray>
					</fields>
				</creditmemo>
            </groups>
        </sales_pdf>
    </sections>
</config>