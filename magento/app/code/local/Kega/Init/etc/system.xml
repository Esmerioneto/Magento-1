<?xml version="1.0" encoding="ISO-8859-1"?>
<config>
	<tabs>
		<extrasettings translate="label" module="init">
			<label>KEGA</label>
			<sort_order>400</sort_order>
		</extrasettings>
	</tabs>
	<sections>
		<extrasettings translate="label" module="init">
			<label>Options</label>
			<sort_order>10</sort_order>
			<tab>extrasettings</tab>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<general translate="label" module="init">
					<label>General settings</label>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<terms_conditions_page>
							<label>Terms and conditions category ID</label>
							<frontend_type>text</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</terms_conditions_page>
					</fields>
				</general>

                <baseurl translate="label" module="init">
					<label>Base URL</label>
					<sort_order>20</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<active>
							<label>Use Base URL feature</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                            <comment>You probably only want to run this on development servers!</comment>
						</active>
					</fields>
                </baseurl>

                <footer translate="label" module="init">
					<label>Footer kolommen</label>
					<sort_order>20</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<col_one>
							<label>Footer kolom 1</label>
							<frontend_type>text</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                            <comment>ID's van de categorieën voor de eerste footer kolom</comment>
						</col_one>
                        <col_two>
							<label>Footer kolom 2</label>
							<frontend_type>text</frontend_type>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                            <comment>ID's van de categorieën voor de tweede footer kolom</comment>
						</col_two>
						<col_three>
							<label>Footer kolom 3</label>
							<frontend_type>text</frontend_type>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                            <comment>ID's van de categorieën voor de derde rechter footer kolom</comment>
						</col_three>
						<col_four>
							<label>Footer kolom 4</label>
							<frontend_type>text</frontend_type>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                            <comment>ID's van de categorieën voor de vierde footer kolom</comment>
						</col_four>
					</fields>
                </footer>

                <color_options translate="label" module="init">
					<label>Color related SKU's</label>
					<sort_order>40</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<pattern>
							<label>Color related SKU's pattern</label>
							<frontend_type>text</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                            <comment>Regex pattern for find the relation between the SKU's.</comment>
						</pattern>
						<current>
							<label>Display current product as color</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                            <comment>Display the current product as color in the color options.</comment>
						</current>
					</fields>
                </color_options>

				<stock translate="label" module="init">
					<label>Stock options</label>
					<sort_order>60</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<out_of_stock>
						<label>Display out of stock products</label>
						<frontend_type>select</frontend_type>
						<source_model>adminhtml/system_config_source_yesno</source_model>
						<sort_order>10</sort_order>
						<show_in_default>1</show_in_default>
						<show_in_website>1</show_in_website>
						<show_in_store>1</show_in_store>
						<comment>Display out of stock product on the product detail page.</comment>
					</out_of_stock>
					</fields>
				</stock>

				<catalog_filters translate="label">
                    <label>Catalog Filter Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>70</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <color_chart translate="label">
                            <label>Color Filter Chart</label>
                            <frontend_model>init/adminhtml_form_field_colorchart</frontend_model>
                            <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </color_chart>
                    </fields>
                </catalog_filters>
                <reindexing translate="label" module="init">
					<label>Reindexing</label>
					<sort_order>80</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<enabled>
							<label>Enabled</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</enabled>
						<frequency translate="label">
							<label>Frequency</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_cron_frequency</source_model>
							<backend_model>init/adminhtml_system_config_backend_frequency_reindexing</backend_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</frequency>
						<time translate="label">
							<label>Start Time</label>
							<frontend_type>time</frontend_type>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</time>
					</fields>
				</reindexing>
			</groups>
		</extrasettings>
		<catalog>
			<groups>
				<externalimage translate="label" module="shipping">
					<fields>
						<label_path translate="label">
							<label>Label image URL</label>
							<comment>Please make sure that Base URL ends with '/' (slash), e.g. http://imagedomain/product_images/</comment>
							<frontend_type>text</frontend_type>
							<sort_order>80</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</label_path>
						<label_extension translate="label">
							<label>Label image extension</label>
							<comment>Examples .png, .jpg</comment>
							<frontend_type>text</frontend_type>
							<sort_order>90</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</label_extension>
					</fields>
				</externalimage>
			</groups>
		</catalog>
	</sections>
</config>